{
    "rules": {
        "semicolon": true,
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "switch-default": false,
        "no-unused-expression": false,
        "no-use-before-declare": false,
        "quotemark": [
            true,
            "single",
            "jsx-double"
        ],
        "curly": [
            true,
            "ignore-same-line"
        ],
        "indent": [
            true,
            "spaces"
        ],
        "eofline": true,
        "no-inferrable-types": true,
        "no-debugger": true,
        "no-trailing-whitespace": true,
        "one-line": [
            true,
            "check-open-brace"
        ],
        "align": [
            true,
            "parameters",
            "statements"
        ],
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "always",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ]
    }
}